generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===============================
// MARCENARIA — FASE 1 (Fundação)
// ===============================

enum ClientType {
  CLIENTE
  FORNECEDOR
  BOTH
}

enum OrderStatus {
  ORCAMENTO
  PEDIDO
  EM_PRODUCAO
  PRONTO
  ENTREGUE
  CANCELADO
}

enum DeliveryStatus {
  PENDENTE
  EM_ROTA
  ENTREGUE
  ATRASADA
  CANCELADA
}

enum InstallmentStatus {
  PENDENTE
  PAGO
  ATRASADO
  CANCELADO
}

enum CostType {
  FIXO
  VARIAVEL
}

enum PaymentMethod {
  PIX
  CARTAO
  DINHEIRO
  BOLETO
  TRANSFERENCIA
  OUTRO
}

enum PaymentMode {
  AVISTA
  PARCELADO
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  password  String
  createdAt DateTime @default(now())

  salon Salon?
}

model Salon {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  plan       String    @default("FREE")
  planStatus String    @default("ACTIVE")
  planEndsAt DateTime?
  trialEndsAt DateTime?


  services         Service[]
  clients          Client[]
  appointments     Appointment[]
  cashCategories   CashCategory[]
  cashTransactions CashTransaction[]
  orders           Order[]
  receivables      Receivable[]
  payables         Payable[]
  costs            Cost[]

  @@index([plan, planStatus])
}

model Service {
  id        String   @id @default(cuid())
  name      String
  category  String?
  price     Int // em centavos (ex: R$ 49,90 = 4990)
  duration  Int // em minutos
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  appointments Appointment[]
}

model Client {
  id        String   @id @default(cuid())
  name      String
  phone     String
  instagram String?
  notes     String?
  createdAt DateTime @default(now())

  type ClientType @default(CLIENTE)

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  appointments Appointment[]
  orders       Order[]
  payables     Payable[]
  costs        Cost[]

  @@index([salonId, type])
}

model Appointment {
  id        String   @id @default(cuid())
  startAt   DateTime
  endAt     DateTime
  status    String   @default("SCHEDULED") // SCHEDULED, DONE, CANCELED
  notes     String?
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  cashTransaction CashTransaction?

  @@index([salonId, startAt])
  @@index([salonId, clientId])
  @@index([salonId, serviceId])
}

enum CashType {
  INCOME
  EXPENSE
}

enum CashSource {
  MANUAL
  APPOINTMENT
}

model CashCategory {
  id        String   @id @default(cuid())
  name      String
  type      CashType
  createdAt DateTime @default(now())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  transactions CashTransaction[]

  @@unique([salonId, name, type])
  @@index([salonId, type])
}

model CashTransaction {
  id     String     @id @default(cuid())
  type   CashType
  source CashSource @default(MANUAL)

  amount      Int // em centavos
  occurredAt  DateTime
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  categoryId String?
  category   CashCategory? @relation(fields: [categoryId], references: [id])

  // integração com agenda (opcional, mas recomendado)
  appointmentId String?      @unique
  appointment   Appointment? @relation(fields: [appointmentId], references: [id])

  @@index([salonId, occurredAt])
  @@index([salonId, type])
  @@index([salonId, categoryId])
}

// ===============================
// MARCENARIA — MODELS NOVOS
// ===============================

model Order {
  id     String      @id @default(cuid())
  status OrderStatus @default(ORCAMENTO)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  // valores (centavos)
  subtotalCents Int @default(0)
  discountCents Int @default(0)
  totalCents    Int @default(0)

  // ✅ pagamento
  paymentMode       PaymentMode    @default(AVISTA)
  paymentMethod     PaymentMethod?
  installmentsCount Int            @default(1)
  firstDueDate      DateTime?

  // previsão/entrega
  expectedDeliveryAt DateTime?
  deliveredAt        DateTime?

  notes String?

  items       OrderItem[]
  deliveries  Delivery[]
  receivables Receivable[]

  @@index([salonId, createdAt])
  @@index([salonId, status])
  @@index([clientId])
}

model OrderItem {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  name        String
  description String?
  quantity    Int     @default(1)

  unitPriceCents Int @default(0)
  totalCents     Int @default(0)

  createdAt DateTime @default(now())

  @@index([orderId])
}

model Delivery {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  status DeliveryStatus @default(PENDENTE)

  expectedAt  DateTime?
  deliveredAt DateTime?
  address     String?
  notes       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([status])
}

model Receivable {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  totalCents Int            @default(0)
  method     PaymentMethod?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  installments ReceivableInstallment[]

  @@index([salonId, createdAt])
  @@index([orderId])
}

model ReceivableInstallment {
  id String @id @default(cuid())

  receivableId String
  receivable   Receivable @relation(fields: [receivableId], references: [id])

  number      Int
  dueDate     DateTime
  amountCents Int

  status InstallmentStatus @default(PENDENTE)
  paidAt DateTime?
  method PaymentMethod?

  createdAt DateTime @default(now())

  @@index([receivableId])
  @@index([dueDate])
  @@index([status])
}

model Payable {
  id String @id @default(cuid())

  // fornecedor (usa Client com type FORNECEDOR/BOTH)
  supplierId String?
  supplier   Client? @relation(fields: [supplierId], references: [id])

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  description String
  totalCents  Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  installments PayableInstallment[]

  @@index([salonId, createdAt])
  @@index([supplierId])
}

model PayableInstallment {
  id String @id @default(cuid())

  payableId String
  payable   Payable @relation(fields: [payableId], references: [id])

  number      Int
  dueDate     DateTime
  amountCents Int

  status InstallmentStatus @default(PENDENTE)
  paidAt DateTime?
  method PaymentMethod?

  createdAt DateTime @default(now())

  @@index([payableId])
  @@index([dueDate])
  @@index([status])
}

model Cost {
  id String @id @default(cuid())

  salonId String
  salon   Salon  @relation(fields: [salonId], references: [id])

  type CostType

  name        String
  description String?

  amountCents Int
  occurredAt  DateTime

  supplierId String?
  supplier   Client? @relation(fields: [supplierId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([salonId, occurredAt])
  @@index([salonId, type])
  @@index([supplierId])
}
